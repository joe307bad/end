{
  "name": "site",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "site",
  "projectType": "application",
  "targets": {
    "deploy": {
      "dependsOn": ["build-release"],
      "command": "flyctl deploy --config apps/site/fly.toml --dockerfile apps/site/Dockerfile"
    },
    "build-release": {
      "dependsOn": ["web:build-release"],
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/site"
      },
      "configurations": {
        "development": {
          "outputPath": "site"
        },
        "production": {
          "nextConfig": "{workspaceRoot}/apps/site/next.config.js"
        }
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/site"
      },
      "configurations": {
        "development": {
          "outputPath": "site"
        },
        "production": {
          "nextConfig": "{workspaceRoot}/apps/site/next.config.js"
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "site:build",
        "dev": true,
        "port": 4300
      },
      "configurations": {
        "development": {
          "buildTarget": "site:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "site:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "site:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "site/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  },
  "tags": []
}
